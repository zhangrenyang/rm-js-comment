{
	"name": "rm-js-comment",
	"displayName": "rm-js-comment",
	"description": "rm-js-comment",
	"keywords": [
		"rm",
		"vscode",
		"plugin",
		"comments",
		"emptyline"
	],
	"version": "1.2.0",
	"publisher": "zhang-renyang",
	"icon": "images/icon.png",
	"repository": "https://github.com/zhangrenyang/rm-js-comment",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Formatters"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"title": "rm-js-comment",
			"properties": {
				"rm-js-comment.replacer": {
					"type": "object",
					"default": [],
					"description": "设置替换文本"
				}
			}
		},
		"commands": [
			{
				"command": "extension.removeComment",
				"title": "Remove Comment"
			},
			{
				"command": "extension.removeAllComment",
				"title": "Remove All Comment"
			},
			{
				"command": "extension.readableCode",
				"title": "Readable Code"
			},
			{
				"command": "extension.removeEmptyLine",
				"title": "Remove Empty Line"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder || selectedFilesCount > 0 || resourceLangId",
					"command": "extension.removeAllComment",
					"group": "comment@1"
				}
			]
		},
		"keybindings": [
			{
				"command": "extension.removeComment",
				"key": "ctrl+shift+q",
				"mac": "cmd+shift+q",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.removeComment",
				"key": "ctrl+shift+w",
				"mac": "cmd+shift+w",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.readableCode",
				"key": "ctrl+shift+e",
				"mac": "cmd+shift+e",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.removeEmptyLine",
				"key": "ctrl+shift+r",
				"mac": "cmd+shift+r",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.49.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"dependencies": {}
}